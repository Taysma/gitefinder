								<label for="arrivee">date arrivée</label>
								<label for="depart">Date depart</label>
							</div>
							<!-- calendrier -->
							<div class="form-date-arrivee-depart">
								<input name="arrivee" class="date-arrive" id="date-arrive" placeholder="Date arrivée">
								<input name="depart" class="date-depart" id="date-depart" placeholder="Date depart">
							</div>
							<div id="calendar"></div>
							<div class="guest-input">
								<select id="input-select">
									<option value="1">1 Personne</option>
									<option value="2">2 Personnes</option>
