{% block header %}

	<header>
		<div class="header-limit-size">
			<div class="logo">
				<a href="{{ path('home') }}">
					<h1>GiteFinder</h1>
				</a>
			</div>
			<div class="button-search">
				<img src="{{ asset('/media/icon/magnifying-glass-solid.svg') }}" alt="Search in GiteFinder">
			</div>
			<!-- search bar -->
			<form action="#" method="GET" class="search-bar-form">
				<div class="search-bar ">

					<input type=" text" id="location-input" placeholder="Location">
					<div class="date-inputs">
						<input type="text" name="dateArrivee" id="date-arrive" class="date-arrive" placeholder="Date d'arrivée" required/>
						<input type="text" name="dateDepart" id="date-depart" class="date-depart" placeholder="Date de départ" required/>
						<div id='calendar'></div>
					</div>

					<select id="guests-input">
						<option value="1">1 Personne</option>
						<option value="2">2 Personnes</option>
						<option value="3">3 Personnes</option>
						<option value="4">4 Personnes</option>
						<option value="5">5 Personnes</option>
						<option value="6">6 Personnes</option>
						<option value="7">7 Personnes</option>
						<option value="8">8 Personnes</option>
					</select>
					<button type="submit" id="search-button">Search</button>

				</div>
			</form>

			{% if session.connect %}

				<div class="menu-burger-header">
					<a href="{{ path('dashboard') }}"><img class="img-burger" src="{{ asset('/media/icon/bars-solid.svg') }}" alt="menu burger"></a>
				</div>
				<div class="img-username">
					<div class="img-profile">
						<img src="{{ asset('/media/icon/WaNom.png') }}" alt="">
					</div>
					<span>{{ session.firstname }}</span>
				</div>

				<a href="{{ path('logout') }}">
					<svg xmlns="http://www.w3.org/2000/svg" height="1.3em" viewbox="0 0 512 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path fill="#FF385C" d="M502.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-128-128c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L402.7 224 192 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l210.7 0-73.4 73.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l128-128zM160 96c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 32C43 32 0 75 0 128L0 384c0 53 43 96 96 96l64 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l64 0z"/></svg>
				</a>

			{% else %}
				<div class="menu-burger-header">
					<a href="{{ path('dashboard') }}"><img class="img-burger" src="{{ asset('/media/icon/bars-solid.svg') }}" alt="menu burger"></a>
					<a href="{{ path('login') }}"><img class="img-burger border-user" src="{{ asset('/media/icon/user-solid.svg') }}" alt="Connexion et inscription"></a>
				</div>

			{% endif %}

		</div>
	</header>
{% endblock %}
